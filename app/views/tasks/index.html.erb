<h1 class="p-2">My tasks</h1>

<ul style="list-style-type: none;" class="p-4">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe,
          task_path(task),
          data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}
      %>

    </li>
  <% end %>
</ul>

<div class="p-2"><%= link_to 'Add an new task', new_task_path %></div>
