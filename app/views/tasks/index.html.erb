<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task.id) %>
      <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe,
          task_path(task),
          data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}
      %>

    </li>
  <% end %>
</ul>

<div><%= link_to 'Add an new task', new_task_path %></div>
