<div class="d-flex justify-content-start">
  <h1 class="p-2"><%= @task.title  %></h1>
  <%= link_to 'Edit', edit_task_path, :class=> "btn btn-light" %>
</div>
<div class="container">
  <p class="p-3 mb-2 bg-light text-dark"><%= @task.details %></p>
  <div>
    <% if @task.completed %>
      <i class="fa-regular fa-square-check p-1"></i><%= @message %>
    <% else %>
      <i class="fa-regular fa-square p-1"></i><%= @message %>
    <% end %>
  </div>
</div>
<p class="p-2"><%= link_to 'Back to list', tasks_path %></p>
